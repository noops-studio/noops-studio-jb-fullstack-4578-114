{
    "compilerOptions": {
      "target": "ES2022", 
      "module": "ES2022",
      "moduleResolution": "node",
      "strict": true,
      "outDir": "./assets/js",
      "rootDir": "./src",
      "removeComments": true,
      "sourceMap": false,
      "allowUmdGlobalAccess": true

      
    },
    "watchOptions": {
      "watchFile": "dynamicprioritypolling",   // Poll files dynamically
      "watchDirectory": "dynamicprioritypolling", // Poll directories dynamically
      "fallbackPolling": "dynamicPriority",   // Fallback polling strategy
      "synchronousWatchDirectory": true,      // Ensure immediate watch updates
      "excludeDirectories": ["**/node_modules"],
      "excludeFiles": ["**/*.min.js"]
    }
  }